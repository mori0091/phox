trait FoldFunc s a b {
    fold : (a -> b -> a) -> a -> s b -> a;
};
impl FoldFunc s a b {
    fold = \op.\init.\it. {
        let @{next} = @{Iter s b};
        let (res,_,_) = for
            (init,true,it)
            (\(_,flag,_). flag)
            (\(a,_,it). match (next it) {
                None          => (a,false,it),
                Some (x, it') => (op a x, true, it'),
            })
        ;
        res
    };
};

// -------------------------------------------------------------
trait Sink ci a co {
    update: ci -> a -> ci;
    finish: ci -> co;
};

// impl Sink (List a) a (List a) {
//     update = flip Cons;
//     finish = list::reverse;
// };

type Fold a b = Fold (a -> b -> a) a;

impl Sink (Fold a b) b a {
    update = \Fold f a.\x. Fold f (f a x);
    finish = \Fold _ a. a;
};

