trait CollectFunc ci s a co {
    collect : ci -> s a -> co;
};

impl CollectFunc ci s a co {
    collect = \sink.\it. {
        let @{next} = @{Iter s a};
        let @{update, finish} = @{Sink ci a co};
        let (acc,_,_) = for
            (sink,true,it)
            (\(_,flag,_). flag)
            (\(sink,_,it). match (next it) {
                None          => (sink,false,it),
                Some (x, it') => (update sink x, true, it'),
            })
        ;
        finish acc
    };
};
