use ::core::Int;

use ::core::ops::*;
use ::core::{
    __i64_add__,
    __i64_sub__,
    __i64_mul__,
    __i64_div__,
    __i64_neg__,
};

use ::core::cmp::*;
use ::core::{
    __i64_eq__,
    __i64_ne__,
    __i64_le__,
    __i64_lt__,
    __i64_ge__,
    __i64_gt__,
};

use ::core::control::for;
use ::core::option::*;

impl Add Int { (+) = \x.\y. __i64_add__ (x, y); };
impl Sub Int { (-) = \x.\y. __i64_sub__ (x, y); };
impl Mul Int { (*) = \x.\y. __i64_mul__ (x, y); };
impl Div Int { (/) = \x.\y. __i64_div__ (x, y); };
impl Neg Int { negate = \x. __i64_neg__ x; };

// -------------------------------------------------------------
impl Eq Int {
    (==) = \x.\y. __i64_eq__ (x, y);
    (!=) = \x.\y. __i64_ne__ (x, y);
};

// -------------------------------------------------------------
impl Ord Int {
    (<=) = \x.\y. __i64_le__ (x, y);
    (<)  = \x.\y. __i64_lt__ (x, y);
    (>=) = \x.\y. __i64_ge__ (x, y);
    (>)  = \x.\y. __i64_gt__ (x, y);
};

// -------------------------------------------------------------
/// Factorial
let fact = \n. {
    let (_, res) = for
        (1,1)
        (\(i,_). @{Ord Int}.(<) i n)
        (\(i,x). (i + 1, x * (i + 1)))
    ;
    res
};

/// Fibonacci number
let fib = \n. {
    let (_, _, res) = for
        (n, 1, 0)
        (\(n,_,_). 0 < n)
        (\(n,x,y). (n - 1, y, x + y))
    ;
    res
};
